    <div class="newsContainer">
        <% for(let i=0; i < news.length; i++) { %>
            <a class="newsUrl" target="_blank" href="<%= news[i].url %>">
            <div class="newsSquare">
                    <img class="newsThumbImg" src=<%= !news[i].image ? "https://www.eff.org/files/images_insert/bitcoin-square-265_0.jpg" : news[i].image.thumbnail.contentUrl %> alt="newsimg">
                    <div class="newsTextContentContainer">
                        <span id="newsProvider">
                            <%= news[i].provider[0].name %>
                        </span>
                        <h3 class="newsHeading">
                            <%= news[i].name %>
                        </h3>
                        <p class="newsDescription">
                            <%= news[i].description %>
